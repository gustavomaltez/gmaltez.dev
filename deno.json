{
  "nodeModulesDir": "auto",
  "tasks": {
    "pre-commit": "echo 'üîç Running pre-commit checks...' && deno fmt --check && echo '‚úÖ Format check passed' && deno lint && echo '‚úÖ Lint check passed' && deno check **/*.ts **/*.tsx && echo '‚úÖ Type check passed' && deno task build && echo 'üéâ All pre-commit checks passed!'",
    "fix-all": "echo 'üîß Fixing all issues...' && deno fmt && echo '‚úÖ Code formatted' && deno lint --fix && echo '‚úÖ Lint issues auto-fixed' && echo 'üí° Run \"deno task check\" to verify all fixes'",
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "preview": "deno run -A main.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"],
      "include": [
        "ban-untagged-todo",
        "default-param-last",
        "eqeqeq",
        "guard-for-in",
        "no-await-in-loop",
        "no-eval",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "no-import-prefix",
        "no-non-null-asserted-optional-chain",
        "prefer-as-const",
        "prefer-const",
        "single-var-declarator",
        "triple-slash-reference",
        "no-inferrable-types"
      ],
      "exclude": [
        "no-explicit-any",
        "no-console",
        "jsx-boolean-value",
        "jsx-curly-braces",
        "jsx-no-unescaped-entities",
        "jsx-no-useless-fragment"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "jsx.bracketPosition": "nextLine"
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@utils": "./utils/index.ts",
    "@models": "./models/index.ts",
    "@islands/": "./islands/",
    "@database": "./database/index.ts",
    "@components": "./components/index.ts",
    "prism": "https://esm.sh/prismjs@1.29.0",
    "prism/": "https://esm.sh/prismjs@1.29.0/",
    "zod": "https://deno.land/x/zod@v3.23.8/mod.ts",
    "marked": "https://esm.sh/marked@7.0.2",
    "fresh": "jsr:@fresh/core@^2.0.2",
    "preact": "https://esm.sh/preact@10.22.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@2.3.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.2",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
