{
  "nodeModulesDir": "manual",
  "tasks": {
    "test": "deno test --no-check --allow-read",
    "pre-commit": "echo 'üîç Running pre-commit checks...' && deno fmt --check && echo '‚úÖ Format check passed' && deno lint && echo '‚úÖ Lint check passed' && deno check **/*.ts **/*.tsx && echo '‚úÖ Type check passed' && deno task build && echo 'üéâ All pre-commit checks passed!'",
    "fix-all": "echo 'üîß Fixing all issues...' && deno fmt && echo '‚úÖ Code formatted' && deno lint --fix && echo '‚úÖ Lint issues auto-fixed' && echo 'üí° Run \"deno task check\" to verify all fixes'",
    "check": "deno fmt --check . && deno lint . && deno check **/*.ts **/*.tsx",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "prepare": "deno run -A npm:husky",
    "lint-staged": "deno run -A npm:lint-staged",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "e2e:headed": "npx playwright test --headed",
    "e2e:debug": "npx playwright test --debug"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"],
      "include": [
        "ban-untagged-todo",
        "default-param-last",
        "eqeqeq",
        "guard-for-in",
        "no-await-in-loop",
        "no-eval",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "no-import-prefix",
        "no-non-null-asserted-optional-chain",
        "prefer-as-const",
        "prefer-const",
        "single-var-declarator",
        "triple-slash-reference",
        "no-inferrable-types"
      ],
      "exclude": [
        "no-explicit-any",
        "no-console",
        "jsx-boolean-value",
        "jsx-curly-braces",
        "jsx-no-unescaped-entities",
        "jsx-no-useless-fragment"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "jsx.bracketPosition": "nextLine"
  },
  "exclude": [
    "**/_fresh/*",
    "vite.config.ts",
    "playwright.config.ts",
    "e2e/**/*"
  ],
  "imports": {
    "@utils": "./utils/index.ts",
    "@models": "./models/index.ts",
    "@islands/": "./islands/",
    "@database": "./database/index.ts",
    "@components": "./components/index.ts",
    "prismjs": "npm:prismjs@^1.29.0",
    "@types/prismjs": "npm:@types/prismjs@^1.26.0",
    "markdown-it": "npm:markdown-it@^14.1.0",
    "@types/markdown-it": "npm:@types/markdown-it@^14.1.2",
    "zod": "npm:zod@^3.24.0",
    "marked": "npm:marked@^15.0.0",
    "fresh": "jsr:@fresh/core",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.2.7",
    "tailwindcss": "npm:tailwindcss@^4.1.17",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.17",
    "husky": "npm:husky@^9.1.7",
    "lint-staged": "npm:lint-staged@^15.5.1",
    "@playwright/test": "npm:@playwright/test@^1.49.1",
    "@axe-core/playwright": "npm:@axe-core/playwright@^4.10.1"
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
